<com.lb.launcher.SearchDropTargetBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:orientation="horizontal" >

    <!-- Drag specific targets container -->

    <LinearLayout
        android:id="@+id/drag_target_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" >

        <FrameLayout
            style="@style/DropTargetButtonContainer"
            android:layout_weight="1" >

            <!-- Delete target -->

            <com.lb.launcher.DeleteDropTarget
                android:id="@+id/delete_target_text"
                style="@style/DropTargetButton"
                android:drawableStart="@drawable/remove_target_selector"
                android:text="@string/delete_zone_label_workspace" />
        </FrameLayout>

        <FrameLayout
            style="@style/DropTargetButtonContainer"
            android:layout_weight="1" >

            <!-- Info target -->

            <com.lb.launcher.InfoDropTarget
                android:id="@+id/info_target_text"
                style="@style/DropTargetButton"
                android:drawableStart="@drawable/info_target_selector"
                android:text="@string/info_target_label" />
        </FrameLayout>
    </LinearLayout>

</com.lb.launcher.SearchDropTargetBar>